<%- include('../../fragments/header.ejs') %>
        <main>
            <h2>Lista filmów</h2>
            <table class="table-list">
                <thead>
                    <tr>
                        <th>Tytuł</th>
                        <th>Box office</th>
                        <th>Data premiery</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                <% for (let film of films) { %>
                    <tr>
                        <td><%= film.filmName %></td>
                        <td><%= film.boxOffice %></td>
                        <td><%= film.releaseDate.toISOString().split('T') [0] %></td>
                        <td>
                            <ul class="list-actions">
                                <li><a href="/films/details/<%= film.idFilm %>" class="list-actions-button-details">Szczegóły</a></li>
                                <li><a href="/films/edit/<%= film.idFilm %>" class="list-actions-button-edit">Edytuj</a></li>
                                <li><a href="/films/delete/<%= film.idFilm %>" class="list-actions-button-delete">Usuń</a></li>
                            </ul>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
            <p><a href="/films/add" class="button-add">Dodaj nowy film</a></p>
        </main>
        <%- include('../../fragments/footer.ejs') %>